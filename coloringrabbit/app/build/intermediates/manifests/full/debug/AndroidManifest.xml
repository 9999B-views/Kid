<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.frype.coloring"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="de.frype.coloring.ColoringApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.frype.coloring.settings.SettingsActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="de.frype.coloring.about.AboutActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="de.frype.coloring.coloring.ColoringActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="de.frype.coloring.color_picker.ColorPickerActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="de.frype.coloring.page_selection.PageSelectionActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="de.frype.coloring.picture_gallery.PictureGalleryActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="de.frype.coloring.book_selection.BookSelectionMainActivity"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.frype.coloring.error_log.SendLogActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>