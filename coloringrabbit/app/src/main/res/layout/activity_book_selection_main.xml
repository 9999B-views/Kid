<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_padding"
    android:paddingLeft="@dimen/activity_horizontal_padding"
    android:paddingRight="@dimen/activity_horizontal_padding"
    android:paddingTop="@dimen/activity_vertical_padding"
    tools:context=".book_selection.BookSelectionMainActivity">

    <ImageButton
        android:id="@+id/exitButton"
        style="@style/NavigationButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_close_white_48dp"
        android:background="@drawable/bg_button_navigation"
        android:contentDescription="@string/content_description_back_button"/>

    <GridView
        android:id="@+id/bookSelectionGridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/exitButton"
        android:layout_toEndOf="@+id/exitButton"
        android:layout_toRightOf="@+id/exitButton"
        android:gravity="center"
        android:stretchMode="spacingWidthUniform"
        android:columnWidth="@dimen/book_preview_width"
        android:numColumns="auto_fit"
        android:verticalSpacing="@dimen/book_gridview_vertical_spacing" />

    <ImageButton
        android:id="@+id/aboutButton"
        style="@style/NavigationButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/exitButton"
        android:src="@drawable/ic_launcher"
        android:background="@drawable/bg_button_navigation"
        android:contentDescription="@string/content_description_about_button"/>

</RelativeLayout>
