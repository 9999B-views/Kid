<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_padding"
    android:paddingLeft="@dimen/activity_horizontal_padding"
    android:paddingRight="@dimen/activity_horizontal_padding"
    android:paddingTop="@dimen/activity_vertical_padding"
    tools:context=".coloring.ColoringActivity">

    <de.frype.coloring.coloring.ColoringView
        android:id="@+id/coloringView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/backButton"
        android:layout_toRightOf="@+id/backButton"
        android:layout_toEndOf="@+id/backButton"
        android:background="@drawable/bg_view_border"/>

    <ImageButton
        android:id="@+id/backButton"
        style="@style/NavigationButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_navigate_before_white_48dp"
        android:background="@drawable/bg_button_navigation"
        android:contentDescription="@string/content_description_back_button" />

    <View
        android:id="@+id/colorPickerButton"
        style="@style/NavigationButtonStyle"
        android:layout_width="@dimen/navigation_button_size"
        android:layout_height="@dimen/navigation_button_size"
        android:background="@drawable/bg_button_color_selection"
        android:layout_below="@+id/backButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
