<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="@dimen/unit9"
        android:top="0dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="@android:color/holo_blue_light" />
            <size
                android:width="@dimen/unit60"
                android:height="@dimen/unit30" />

            <corners android:radius="@dimen/unit4" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/unit7"
        android:gravity="left|bottom"
        android:left="@dimen/unit3"
        android:top="@dimen/unit5">
        <rotate
            android:fromDegrees="135"
            android:toDegrees="30">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/holo_blue_light" />
                <size
                    android:width="@dimen/unit15"
                    android:height="@dimen/unit15" />
            </shape>
        </rotate>
    </item>
</layer-list>