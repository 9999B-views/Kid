<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="@dimen/unit7">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="@color/darkGrey" />
            <size
                android:width="@dimen/unit60"
                android:height="@dimen/unit30" />
            <corners android:radius="@dimen/unit4" />
        </shape>
    </item>

    <item
        android:gravity="right|top"
        android:right="@dimen/unit5"
        android:top="@dimen/unit3">
        <rotate
            android:fromDegrees="135"
            android:toDegrees="30">
            <shape android:shape="rectangle">
                <solid android:color="@color/darkGrey" />
                <size
                    android:width="@dimen/unit15"
                    android:height="@dimen/unit15" />
            </shape>
        </rotate>
    </item>
</layer-list>