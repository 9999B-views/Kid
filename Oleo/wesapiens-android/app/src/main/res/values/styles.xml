<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/md_orange_400</item>
    </style>

    <style name="FrameText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize" >@dimen/unit11</item>
        <item name="android:fontFamily">@font/lato_family</item>
    </style>

    <style name="FrameEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/unit11</item>
        <item name="android:fontFamily">@font/lato_family</item>
    </style>

    <style name="GameExtraInfoText" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/lato_family</item>
        <item name="android:textColor">@color/md_orange_700</item>
        <item name="android:textSize">@dimen/unit18</item>
    </style>

    <style name="ToastText" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/mali_family</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/unit14</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SelectTopicTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/md_orange_700</item>
        <item name="android:textSize" >@dimen/unit48</item>
        <item name="android:fontFamily">@font/mali_family</item>
    </style>

    <style name="DialogTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize" >@dimen/unit22</item>
        <item name="android:fontFamily">@font/lato_family</item>
    </style>

    <style name="DialogBody" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize" >@dimen/unit18</item>
        <item name="android:fontFamily">@font/lato_family</item>
    </style>

    <style name="DialogButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize" >@dimen/unit24</item>
        <item name="android:fontFamily">@font/lato_family</item>
    </style>

    <style name="homeButtonText" >
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >#ffffff</item>
        <item name="android:gravity" >center</item>
        <item name="android:layout_margin" >3dp</item>
        <item name="android:textSize" >30dp</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:fontFamily">@font/mali_family</item>
        <item name="android:shadowColor" >#000000</item>
        <item name="android:shadowDx" >1</item>
        <item name="android:shadowDy" >1</item>
        <item name="android:shadowRadius" >2</item>
    </style>

</resources>
