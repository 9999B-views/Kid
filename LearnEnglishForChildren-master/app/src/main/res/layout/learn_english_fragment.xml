<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/backg"
    android:weightSum="10"
    tools:context=".views.Fragments.LearnEnglishFragment">
    <TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
     android:layout_weight="1"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textStyle="bold"
    android:gravity="center"
    android:textSize="50sp"
    android:textColor="@android:color/holo_blue_light"
    android:id="@+id/word_txt_id"
        android:layout_marginTop="3dp"
    />
    <ImageView
    android:layout_width="match_parent"
    android:layout_height="0dp"
     android:layout_weight="3.5"
    android:id="@+id/image_char_id"
    android:src="@drawable/a"
    android:layout_marginTop="5dp"
        tools:ignore="ContentDescription" />
    <ImageView
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_weight="3.5"
    android:id="@+id/image_word_id"
    android:src="@drawable/ant"
     android:layout_marginTop="5dp"
        tools:ignore="ContentDescription" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="5dp"
        android:weightSum="4"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/karaoke"
            android:id="@+id/speak_char_id"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/karaoke"
            android:id="@+id/speak_Word_id"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back"
            android:id="@+id/go_back_id"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/next"
            android:id="@+id/go_front_id"
           />
    </LinearLayout>
</LinearLayout>