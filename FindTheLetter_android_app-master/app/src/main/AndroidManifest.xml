<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.findtheletter.jetlightstudio.findtheletter">



    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <application

        android:allowBackup="true"
        android:icon="@mipmap/penguin"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/penguin"
        android:supportsRtl="true">

        <!-- Sample AdMob App ID: ca-app-pub-3940256099942544~3347511713 -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/mainMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ImageActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/imageTheme" />
        <activity
            android:name=".HelpActivity"
            android:theme="@style/helpTheme" />
        <activity
            android:name=".SoloActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/soloTheme" />
        <activity android:name=".TextActivity"></activity>
    </application>

</manifest>