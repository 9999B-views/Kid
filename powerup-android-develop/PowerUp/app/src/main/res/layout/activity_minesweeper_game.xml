                        android:layout_width="@dimen/adjustable"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:onClick="openMine"
                        android:scaleType="fitXY"
                        android:src="@drawable/yellow_star" />

                    <ImageView
