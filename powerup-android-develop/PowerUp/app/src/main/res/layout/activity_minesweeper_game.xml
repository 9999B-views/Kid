                    <ImageView
                        android:id="@+id/imageView24"
                        android:layout_width="@dimen/adjustable"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:onClick="openMine"
                        android:scaleType="fitXY"
                        android:src="@drawable/yellow_star" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/adjustable"
                android:layout_weight="1"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/adjustable"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/adjustable"
                android:layout_weight="0.6" />

            <TextView
                android:id="@+id/minesweeper_score"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/adjustable"
                android:layout_gravity="end"
                android:layout_weight="1.5"
                android:paddingRight="@dimen/score_padding_right"
                android:paddingEnd="@dimen/score_padding_right"
                android:text="Score: 0"
                android:textColor="@color/score_color"
                android:textSize="@dimen/score_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/adjustable"
                android:layout_weight="20" />

        </LinearLayout>

    </LinearLayout>
    />

    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_height"
        android:layout_gravity="center_vertical"
        android:alpha="0"
        android:scaleType="fitXY"
        android:src="@drawable/failure_banner" />

    <ImageView
        android:id="@+id/continue_button"
        android:layout_width="@dimen/continue_width"
        android:layout_height="@dimen/continue_height"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/continue_marginBottom"
        android:alpha="0"
        android:background="@drawable/continue_button"
        android:clickable="false"
        android:onClick="continuePressed"
        android:scaleType="fitXY" />

</FrameLayout>
