<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearItem"
    android:layout_width="100dp"
    android:layout_height="120dp"
    android:layout_margin="16dp"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnrot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical"
        android:weightSum="133">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100">

            <com.makeramen.roundedimageview.RoundedImageView

                android:id="@+id/btnApp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/topic_holder"
                android:visibility="visible"
                app:riv_border_color="#ffffff"
                app:riv_border_width="4dp"
                app:riv_corner_radius="30dip"
                app:riv_mutate_background="false"
                app:riv_oval="false"
                app:riv_tile_mode="clamp"

                />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgLock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:alpha="0.9"
                android:src="@drawable/lock_icon"
                app:riv_corner_radius="30dp"
                app:riv_mutate_background="false"
                app:riv_oval="false"
                app:riv_tile_mode="clamp"
                />

            <!--<com.white.progressview.HorizontalProgressView-->
            <!--android:id="@+id/progress100"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="18dp"-->
            <!--android:layout_alignBottom="@+id/btnApp"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginBottom="11dp"-->
            <!--android:alpha="0.6"-->
            <!--android:padding="10dp"-->
            <!--android:progress="50"-->
            <!--app:progressNormalColor="#f2f7f2"-->
            <!--app:progressNormalSize="8dp"-->
            <!--app:progressReachColor="#71ec0d"-->
            <!--app:progressReachSize="8dp"-->
            <!--app:progressTextColor="#000"-->
            <!--app:progressTextVisible="false" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="top"
                android:orientation="vertical"
                android:weightSum="100">

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="75" />

                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/progressView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"
                    android:alpha="0.6"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    app:rcBackgroundColor="#00cccccc"
                    app:rcBackgroundPadding="0dp"
                    app:rcMax="1"
                    app:rcProgress="0.5"
                    app:rcProgressColor="#14e2bc"
                    app:rcRadius="10dp"
                    app:rcReverse="false"
                    app:rcSecondaryProgress="1"
                    app:rcSecondaryProgressColor="#fbfcfc">

                </com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar>
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/txtname"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="33"
            android:gravity="center"
            android:text="@string/loading_topic"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>