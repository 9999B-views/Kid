<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.secuso.privacyfriendlyreckoningskills.activities.ExerciseActivity"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">


            <include layout="@layout/toolbar_exercise"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/valuex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorPrimary"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/operator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.17"
                    android:text="+"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/valuey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="48sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="="
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/inputfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="48sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:background="?attr/colorPrimary" />

            <TextView
                android:id="@+id/lastinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"></LinearLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="4"
                android:orientation="horizontal">

                <org.secuso.privacyfriendlyreckoningskills.SquareButton
                    android:id="@+id/calcbutton_01"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_normal"
                    android:onClick="calcbuttonClicked"
                    android:text="1"
                    android:textColor="@color/white" />

                <org.secuso.privacyfriendlyreckoningskills.SquareButton
                    android:id="@+id/calcbutton_02"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_normal"
                    android:onClick="calcbuttonClicked"
                    android:text="2"
                    android:textColor="@color/white" />

                <org.secuso.privacyfriendlyreckoningskills.SquareButton
                    android:id="@+id/calcbutton_03"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_normal"
                    android:onClick="calcbuttonClicked"
                    android:text="3"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <org.secuso.privacyfriendlyreckoningskills.SquareButton
                    android:id="@+id/calcbutton_04"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_normal"
                    android:onClick="calcbuttonClicked"
                    android:text="4"
                    android:textColor="@color/white" />

                <org.secuso.privacyfriendlyreckoningskills.SquareButton
                    android:id="@+id/calcbutton_05"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_normal"
                    android:onClick="calcbuttonClicked"
                    android:text="5"
                    android:textColor="@color/white" />

                <org.secuso.privacyfriendlyreckoningskills.SquareButton
                    android:id="@+id/calcbutton_06"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_normal"
                    android:onClick="calcbuttonClicked"
                    android:text="6"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <org.secuso.privacyfriendlyreckoningskills.SquareButton
                    android:id="@+id/calcbutton_07"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_normal"
                    android:onClick="calcbuttonClicked"
                    android:text="7"
                    android:textColor="@color/white" />

                <org.secuso.privacyfriendlyreckoningskills.SquareButton
                    android:id="@+id/calcbutton_08"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_normal"
                    android:onClick="calcbuttonClicked"
                    android:text="8"
                    android:textColor="@color/white" />

                <org.secuso.privacyfriendlyreckoningskills.SquareButton
                    android:id="@+id/calcbutton_09"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_normal"
                    android:onClick="calcbuttonClicked"
                    android:text="9"
                    android:textColor="@color/white" />

                <org.secuso.privacyfriendlyreckoningskills.SquareButton
                    android:id="@+id/calcbutton_trash"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_normal"
                    android:onClick="calcbuttonClicked"
                    android:text="X"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <org.secuso.privacyfriendlyreckoningskills.SquareButton
                    android:id="@+id/calcbutton_00"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_normal"
                    android:onClick="calcbuttonClicked"
                    android:text="0"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <org.secuso.privacyfriendlyreckoningskills.SquareButton
                    android:id="@+id/calcbutton_confirm"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/button_normal"
                    android:onClick="calcbuttonClicked"
                    android:text="&#x2713;"
                    android:textColor="@color/white" />

            </GridLayout>

        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
