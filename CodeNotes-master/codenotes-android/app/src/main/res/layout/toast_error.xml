<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/error_toast_container"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/unit60"
    android:background="@drawable/errortoastshape"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:layout_width="@dimen/unit50"
        android:layout_height="@dimen/unit50"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/unit10"
        android:layout_marginRight="8dp"
        android:src="@drawable/error_icon"
        android:tint="@color/md_white_1000" />

    <TextView
        android:id="@+id/error_toast_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunitofamily"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/unit10"
        android:layout_marginRight="@dimen/unit10"
        android:textColor="#FFF" />

</LinearLayout>