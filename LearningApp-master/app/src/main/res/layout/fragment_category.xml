<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightpurple"
    tools:context="com.example.aferyannie.learningapp.CategoryFragment">

    <Button
        android:id="@+id/btnClear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="12dp"
        android:background="@drawable/confusing_shape"
        android:fontFamily="casual"
        android:text="@string/clear"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:fontFamily="casual"
        android:text="KATEGORI"
        android:textAlignment="center"
        android:textColor="@color/com_facebook_button_background_color"
        android:textSize="32sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSound"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCategory"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/ic_lock_silent_mode_off" />

    <com.example.aferyannie.learningapp.PaintView
        android:id="@+id/PaintView"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_below="@+id/btnSound"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        app:layout_constraintDimensionRatio="1:1" />

    <TextView
        android:id="@+id/txtTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/PaintView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/timer"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@android:color/black" />

</RelativeLayout>
